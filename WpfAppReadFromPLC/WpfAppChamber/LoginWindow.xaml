<Window x:Class="WpfAppCSV.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppCSV"
        mc:Ignorable="d"
        Title="Login" Height="180" Width="360" Icon="Images/bury.png" ResizeMode="NoResize">
    <Grid>
        <Button Content="Login" HorizontalAlignment="Left" Margin="240,110,0,0" VerticalAlignment="Top" Width="100" Height="25" Click="Button_Click"/>
        <PasswordBox Name="PoleHasla" HorizontalAlignment="Left" Height="25" Margin="10,110,0,0" VerticalAlignment="Top" Width="225" Background="#FFCAEAF0" FontFamily="Calibri" FontSize="14"/>
        <Image HorizontalAlignment="Left" Height="80" Margin="190,10,0,0" VerticalAlignment="Top" Width="150" Source="Images/bury.png"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,90,0,0" TextWrapping="Wrap" Text="Enter password:" VerticalAlignment="Top" Width="180"/>
        <TextBlock Text="App for CHAMBER" HorizontalAlignment="Left" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
    </Grid>
</Window>
